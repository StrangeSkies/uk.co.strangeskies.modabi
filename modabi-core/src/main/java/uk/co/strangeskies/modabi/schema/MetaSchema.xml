<?xml version="1.1"?>
<modelSchema>

	<types>
		<type name="integerRange"></type>
	</types>

	<models>
		<model name="include">
			<data inMethod="" />
		</model>

		<model name="type">
			<property name="name" />

			<property name="dataClass"
				bindingClass="uk.co.strangeskies.modabi.schema.node.data.DataType" />

			<choice>

			</choice>
		</model>

		<model name="node" bindingClass="uk.co.strangeskies.modabi.schema.node.SchemaNode" />

		<model name="input" bindingClass="uk.co.strangeskies.modabi.schema.node.InputNode">
			<property name="inMethod" />

			<property name="inMethodChains" type="boolean" />
		</model>

		<model name="branch" model="input" abstract="true"
			bindingClass="uk.co.strangeskies.modabi.schema.node.BranchingNode">
			<binding name="child" inMethod="addChild" model="node"
				occurences="0.." />
		</model>

		<model name="choice" model="branch">
			<binding name="child" occurences="2.." />
		</model>

		<model name="sequence" model="branch" />

		<model name="binding" model="sequence"
			bindingClass="uk.co.strangeskies.modabi.schema.node.BindingNode"
			builderClass="uk.co.strangeskies.modabi.schema.node.builder.BindingNodeBuilder">
			<property name="name" />

			<property name="base" type="reference" optional="true" />

			<property name="occurances" type="integerRange" optional="true" />

			<property name="bindingClass" type="class" optional="true" />

			<property name="outMethod" optional="true" />

			<property name="iterable" type="boolean" optional="true" />

			<choice>
				<sequence />

				<sequence>
					<property name="factoryClass" type="class" />

					<property name="factoryMethod" optional="true" />
				</sequence>
			</choice>
		</model>

		<model name="model" model="binding" />

		<model name="data" model="node"
			bindingClass="uk.co.strangeskies.modabi.schema.node.DataNode"
			factoryClass="uk.co.strangeskies.modabi.schema.node.builder.DataNodeBuilder">
			<property name="type" />

			<property name="optional" optional="true" type="boolean" />

			<data optional="true" />
		</model>

		<model name="property" model="data"
			bindingClass="uk.co.strangeskies.modabi.schema.node.PropertyNode"
			factoryClass="uk.co.strangeskies.modabi.schema.node.builder.PropertyNodeBuilder">
			<property name="name" />
		</model>
	</models>

	<root name="modelSchema" bindingClass="uk.co.strangeskies.modabi.schema.SchemaGraph"
		factoryClass="uk.co.strangeskies.modabi.schema.SchemaGraphBuilder">
		<binding name="includes" occurences="0..1">
			<binding model="include" occurences="0.." />
		</binding>

		<binding name="types" occurences="0..1">
			<binding name="type" model="type" occurences="0.."
				outIterator="getTypes" />
		</binding>

		<binding name="models" occurences="0..1">
			<binding name="model" model="binding" occurences="0.." />
		</binding>

		<binding name="root" model="binding" occurences="0..1" />
	</root>

</modelSchema>
