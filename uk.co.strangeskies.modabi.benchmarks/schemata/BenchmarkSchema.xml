<?xml version="1.0" ?>
<schema
	xmlns="http://modabi.strangeskies.co.uk/2014-01-01/"
	name="BenchmarkSchema">

	<imports>
		uk.co.strangeskies.modabi.benchmark.PersonType,
		uk.co.strangeskies.modabi.benchmark.PersonsType,
		uk.co.strangeskies.reflection.TypeToken.Infer,
		java.util.List
	</imports>

	<dependencies>
		BaseSchema
	</dependencies>

	<types />

	<models>
		<model
			name="person"
			dataType="PersonType"
			bindingStrategy="CONSTRUCTOR">

			<inputSequence name="constructor" />

			<property
				name="active"
				type="boolean" />
			<simple
				name="firstName"
				type="string" />
			<simple
				name="lastName"
				type="string" />
			<simple
				name="address1"
				type="string" />
			<simple
				name="address2"
				type="string" />
			<simple
				name="postCode"
				type="string" />
			<simple
				name="city"
				type="string" />
			<simple
				name="country"
				type="string" />
		</model>

		<model
			name="persons"
			dataType="PersonsType"
			bindingStrategy="CONSTRUCTOR">
			<inline
				name="personList"
				outMethod="getPerson"
				dataType="@Infer List&lt;?&gt;">
				<complex
					model="person"
					outMethod="this"
					occurrences="0.."
					inMethod="add"
					outMethodIterable="true" />
			</inline>
		</model>
	</models>
</schema>
