<?xml version="1.0" ?>
<schema
	xmlns="http://modabi.strangeskies.co.uk/2014-01-01/"
	name="ScriptingSchema">

	<dependencies>
		BaseSchema
	</dependencies>

	<imports>
		java.lang.Object,

		javax.script.ScriptEngineManager,
		javax.script.ScriptEngine,
		javax.script.Invocable,

		uk.co.strangeskies.reflection.TypeToken,
		uk.co.strangeskies.reflection.TypeToken.Infer,

		uk.co.strangeskies.modabi.scripting.ScriptObject,
		uk.co.strangeskies.modabi.scripting.ScriptObjectBuilder,
		uk.co.strangeskies.modabi.processing.ProcessingContext,
		uk.co.strangeskies.modabi.schema.Model
	</imports>

	<types />

	<models>
		<model
			name="scriptObject"
			dataType="@Infer ?"
			extensible="true"
			abstractness="ABSTRACT"

			inputBindingStrategy="STATIC_FACTORY"
			inputBindingType="ScriptObjectBuilder"

			outputBindingStrategy="STATIC_FACTORY"
			outputBindingFactoryType="ScriptObjectBuilder"
			outputBindingType="ScriptObject"
			outputBindingMethod="cast">

			<inputSequence name="build" />

			<property
				name="objectName"
				occurrences="0..1"
				type="string" />

			<data
				name="scriptEngineManager"
				dataType="ScriptEngineManager"
				inputBindingStrategy="PROVIDED"
				outputField="void" />

			<data
				name="objectType"
				dataType="TypeToken{?}"
				inputBindingStrategy="PROVIDED"
				inputBindingType="ProcessingContext"
				outputField="void">

				<data
					name="getBindingNode"
					outputField="void"
					type="int"
					postInputType="Model{?}"
					chainedInput="true"
					castInput="true"
					value="1" />

				<inputSequence
					name="dataType"
					chainedInput="true" />
			</data>

			<choice name="scriptSource">
				<sequence name="direct">
					<content
						name="script"
						type="string" />

					<property
						name="language"
						type="string" />
				</sequence>

				<sequence name="resource">
					<property
						name="resource"
						type="string" />

					<property
						name="language"
						type="string"
						optional="true" />
				</sequence>
			</choice>

			<inputSequence
				name="create"
				chainedInput="true" />

			<inputSequence
				name="cast"
				chainedInput="true" />
		</model>
	</models>
</schema>
