<?xml version="1.0" ?>
<schema
	xmlns="http://modabi.strangeskies.co.uk/2014-01-01/"
	xmlns:sai="http://saiman.co.uk/2015-10-08/"
	name="sai:PeriodicTableSchema">

	<imports>
		uk.co.strangeskies.reflection.token.TypeToken.Infer,
		java.util.Collection,
		java.util.List,
		uk.co.saiman.chemistry.Element.Group,
		uk.co.saiman.chemistry.PeriodicTable,
		uk.co.saiman.chemistry.Element,
		uk.co.saiman.chemistry.isotope.Isotope
	</imports>

	<dependencies>
		BaseSchema
	</dependencies>

	<types />

	<models>
		<model
			name="sai:isotope"
			dataType="Isotope"
			inputBinding="null">

			<node>
				<bind name="sai:massNumber">
					<input />
					<property type="int" />
				</bind>

				<bind name="sai:mass">
					<input />
					<property type="double" />
				</bind>

				<bind
					name="sai:abundance"
					input="target = new Isotope(${../sai:massNumber}, ${../sai:mass}, ${.})" />
			</node>
		</model>

		<model
			name="sai:element"
			dataType="Element"
			inputBinding="null">

			<node initializeInput="new Element()">
				<bind
					name="sai:atomicNumber"
					model="int"

					input=".=withAtomicNumber(result)" />

				<bind
					name="sai:name"
					model="string"

					condition="optional"

					input=".=withName(${.})" />

				<bind
					name="sai:symbol"
					model="string"

					input=".=withSymbol(${.})" />

				<bind
					model="sai:isotope"
					condition="occurrences(Range.from(0))"

					output=".getIsotopes()[]"
					input=".=withIsotope(${.})" />

				<bind
					name="sai:group"
					model="enum"
					dataType="Group" />
			</node>
		</model>

		<model
			name="sai:periodicTable"
			dataType="PeriodicTable">

			<node initializeInput="new">
				<bind
					name="sai:name"
					model="string" />

				<bind
					model="sai:element"

					output=".getElements()[]"
					input=".getElements().add(result)">

					<condition>
						<occurrences range="0.." />
					</condition>
				</bind>
			</node>
		</model>
	</models>
</schema>
